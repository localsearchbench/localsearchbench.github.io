# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DASHSCOPE_API_KEY=your-dashscope-api-key  # For Qwen models

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B  # 使用 Qwen 模型
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
# RERANKER_MODEL=Qwen/Qwen3-Reranker-8B

# GPU Configuration
CUDA_VISIBLE_DEVICES=0  # 使用第一块 GPU
# CUDA_VISIBLE_DEVICES=0,1  # 使用多块 GPU

# Vector Database
VECTOR_DB_TYPE=faiss  # faiss, qdrant, milvus
VECTOR_DB_PATH=/path/to/vector/db
VECTOR_DB_DIMENSION=768

# RAG Configuration
DEFAULT_TOP_K=5
MAX_TOP_K=50
CHUNK_SIZE=512
CHUNK_OVERLAP=50

