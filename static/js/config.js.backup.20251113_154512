/**
 * LocalSearchBench Configuration
 * 
 * é…ç½®è¯´æ˜ï¼š
 * 1. RAG_SERVER_URL ä¼šåœ¨é¡µé¢åŠ è½½æ—¶åŠ¨æ€ä» tunnel_config.json è·å–
 * 2. å¦‚æœåŠ¨æ€åŠ è½½å¤±è´¥ï¼Œä¼šä½¿ç”¨è¿™é‡Œçš„é»˜è®¤å€¼ä½œä¸ºåå¤‡
 * 3. ç¡®ä¿ RAG æœåŠ¡å™¨å·²é…ç½® CORS å…è®¸æ¥è‡ª GitHub Pages çš„è¯·æ±‚
 */

const CONFIG = {
    // RAG Server Configuration
    // è¿™ä¸ª URL ä¼šåœ¨è¿è¡Œæ—¶è¢«åŠ¨æ€é…ç½®è¦†ç›–
    RAG_SERVER_URL: 'https://tips-weeks-usual-mobiles.trycloudflare.com',
    
    // åŠ¨æ€é…ç½®æ–‡ä»¶è·¯å¾„ï¼ˆç›¸å¯¹äºç½‘ç«™æ ¹ç›®å½•ï¼‰
    DYNAMIC_CONFIG_URL: './tunnel_config.json',
    
    // API Endpoints
    API_ENDPOINTS: {
        RAG_SEARCH: '/api/rag/search',
        WEB_SEARCH: '/api/web/search',
        AGENTIC_SEARCH: '/api/agentic/search',
        HEALTH_CHECK: '/health'
    },
    
    // Default Parameters
    DEFAULTS: {
        TOP_K: 20,
        RETRIEVER_MODEL: 'Qwen3-Embedding-8B',
        RERANKER_MODEL: 'Qwen3-Reranker-8B',
        LLM_MODEL: 'gpt-4',
        USE_RERANKER: true,
        GENERATE_ANSWER: true
    },
    
    // Timeout settings (milliseconds)
    TIMEOUT: {
        RAG_SEARCH: 60000,      // 60 seconds
        WEB_SEARCH: 10000,      // 10 seconds
        AGENTIC_SEARCH: 120000  // 120 seconds
    }
};

/**
 * åŠ¨æ€åŠ è½½ RAG æœåŠ¡å™¨é…ç½®
 * ä» tunnel_config.json è·å–æœ€æ–°çš„éš§é“ URL
 */
async function loadDynamicConfig() {
    try {
        // æ·»åŠ æ—¶é—´æˆ³é˜²æ­¢ç¼“å­˜
        const timestamp = new Date().getTime();
        const response = await fetch(`${CONFIG.DYNAMIC_CONFIG_URL}?t=${timestamp}`, {
            cache: 'no-cache',
            headers: {
                'Cache-Control': 'no-cache, no-store, must-revalidate',
                'Pragma': 'no-cache'
            }
        });
        
        if (response.ok) {
            const dynamicConfig = await response.json();
            if (dynamicConfig.rag_server_url) {
                const oldUrl = CONFIG.RAG_SERVER_URL;
                CONFIG.RAG_SERVER_URL = dynamicConfig.rag_server_url;
                
                // æ£€æµ‹ URL æ˜¯å¦å˜åŒ–
                const urlChanged = oldUrl !== dynamicConfig.rag_server_url;
                
                console.log('âœ… åŠ¨æ€é…ç½®åŠ è½½æˆåŠŸ:', CONFIG.RAG_SERVER_URL);
                console.log('ğŸ“… é…ç½®æ›´æ–°æ—¶é—´:', dynamicConfig.updated_at || 'æœªçŸ¥');
                
                if (dynamicConfig.tunnel_type === 'temporary') {
                    console.warn('âš ï¸  å½“å‰ä½¿ç”¨ä¸´æ—¶éš§é“ï¼ŒURL å¯èƒ½ä¼šåœ¨é‡å¯åå˜åŒ–');
                }
                
                // å¦‚æœ URL å˜åŒ–ï¼Œæ˜¾ç¤ºé€šçŸ¥
                if (urlChanged && oldUrl !== 'https://phrases-election-integrating-brand.trycloudflare.com') {
                    showUrlChangeNotification(oldUrl, dynamicConfig.rag_server_url);
                }
                
                return true;
            }
        }
    } catch (error) {
        console.warn('âš ï¸  åŠ¨æ€é…ç½®åŠ è½½å¤±è´¥ï¼Œä½¿ç”¨é»˜è®¤é…ç½®:', error.message);
    }
    return false;
}

/**
 * æ˜¾ç¤º URL å˜åŒ–é€šçŸ¥
 */
function showUrlChangeNotification(oldUrl, newUrl) {
    console.log('ğŸ”„ éš§é“ URL å·²æ›´æ–°:');
    console.log('   æ—§: ' + oldUrl);
    console.log('   æ–°: ' + newUrl);
    
    // è§¦å‘è‡ªå®šä¹‰äº‹ä»¶ï¼Œè®©é¡µé¢æ˜¾ç¤ºé€šçŸ¥
    window.dispatchEvent(new CustomEvent('tunnelUrlChanged', { 
        detail: { oldUrl, newUrl } 
    }));
}

/**
 * å®šæœŸæ£€æŸ¥é…ç½®æ›´æ–°ï¼ˆç”¨äºä¸´æ—¶éš§é“è‡ªåŠ¨é‡å¯åœºæ™¯ï¼‰
 */
function startConfigPolling(intervalSeconds = 60) {
    if (window.configPollingInterval) {
        clearInterval(window.configPollingInterval);
    }
    
    window.configPollingInterval = setInterval(async () => {
        console.log('ğŸ” æ£€æŸ¥é…ç½®æ›´æ–°...');
        const success = await loadDynamicConfig();
        if (success) {
            // è§¦å‘é…ç½®æ›´æ–°äº‹ä»¶
            window.dispatchEvent(new CustomEvent('configUpdated', { detail: CONFIG }));
        }
    }, intervalSeconds * 1000);
    
    console.log(`âœ… å·²å¯åŠ¨é…ç½®è½®è¯¢ï¼Œé—´éš” ${intervalSeconds} ç§’`);
}

/**
 * åœæ­¢é…ç½®è½®è¯¢
 */
function stopConfigPolling() {
    if (window.configPollingInterval) {
        clearInterval(window.configPollingInterval);
        window.configPollingInterval = null;
        console.log('â¹ï¸  å·²åœæ­¢é…ç½®è½®è¯¢');
    }
}

// åœ¨é¡µé¢åŠ è½½æ—¶è‡ªåŠ¨åŠ è½½åŠ¨æ€é…ç½®
if (typeof window !== 'undefined') {
    // ç«‹å³åŠ è½½åŠ¨æ€é…ç½®
    loadDynamicConfig().then(() => {
        // è§¦å‘è‡ªå®šä¹‰äº‹ä»¶ï¼Œé€šçŸ¥é…ç½®å·²æ›´æ–°
        window.dispatchEvent(new CustomEvent('configLoaded', { detail: CONFIG }));
        
        // å¯åŠ¨é…ç½®è½®è¯¢ï¼ˆæ¯60ç§’æ£€æŸ¥ä¸€æ¬¡ï¼‰
        // è¿™æ ·å½“ä¸´æ—¶éš§é“é‡å¯æ—¶ï¼Œå‰ç«¯å¯ä»¥è‡ªåŠ¨è·å–æ–°çš„ URL
        startConfigPolling(60);
    });
}

// Export for use in other scripts
window.CONFIG = CONFIG;
window.loadDynamicConfig = loadDynamicConfig;
window.startConfigPolling = startConfigPolling;
window.stopConfigPolling = stopConfigPolling;
